<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/bg"
    android:layout_height="match_parent">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            android:theme="@style/ThemeOverlay.AppTheme.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppTheme.PopupMenu">
            <com.HIVFactsheet.ScrollingTextview
                android:id = "@+id/title"
                android:textColor = "@color/colorAccentsss"
                android:textSize="20sp"
                android:layout_width = "wrap_content"
                android:marqueeRepeatLimit="1"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_height = "wrap_content" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:scrollbars="vertical">
        <ScrollView
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:scrollbars="vertical">
            <android.support.v7.widget.LinearLayoutCompat
                 android:layout_width="match_parent"
                android:id="@+id/widget"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/linearLayout2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="50dp"
                        android:paddingRight="50dp"
                        android:gravity="center_horizontal"
                        android:id="@+id/linearLayout3">

                        <com.HIVFactsheet.ScrollingButton
                            android:id="@+id/button42"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="0dp"
                            android:ellipsize="marquee"
                            android:textColor="@android:color/black"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button"
                            android:text="AMPATH RESEARCH"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp"
                    android:layout_marginTop="50dp"
                    android:paddingRight="50dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/linearLayout4">
                    <com.HIVFactsheet.ScrollingButton
                        android:id="@+id/button41"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:text="CURE RESEARCH"
                        android:layout_width="0dp"
                        android:ellipsize="marquee"
                        android:textColor="@android:color/black"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="50dp"
                        android:layout_marginTop="50dp"
                        android:paddingRight="50dp"
                        android:gravity="center_horizontal"
                        android:id="@+id/linearLayout5">
                        <com.HIVFactsheet.ScrollingButton
                            android:id="@+id/button450"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:text="RESEARCH PUBLICATIONS"
                            android:layout_width="0dp"
                            android:ellipsize="marquee"
                            android:textColor="@android:color/black"
                            android:focusable="true"
                            android:focusableInTouchMode="false"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="50dp"
                        android:layout_marginTop="50dp"
                        android:paddingRight="50dp"
                        android:gravity="center_horizontal"
                        android:id="@+id/linearLayout">
                    <com.HIVFactsheet.ScrollingButton
                        android:id="@+id/button46"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="0dp"
                        android:ellipsize="marquee"
                        android:textColor="@android:color/black"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button"
                        android:text="HIV RESEARCH LINKS"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    </LinearLayout>
                  </LinearLayout>
                 </android.support.v7.widget.LinearLayoutCompat>
             </ScrollView>
    </android.support.v4.widget.NestedScrollView>
    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>